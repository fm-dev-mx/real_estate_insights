{
    "name": "fm-dev-mx/real_estate_insights",
    "description": "Sistema de an√°lisis automatizado para propiedades inmobiliarias en venta.",
    "image": "universal",
    "features": {
        "codeExecution": true,
        "linting": true,
        "unitTesting": true,
        "python": true
    },
    "env": {
        "PYTHONPATH": ".",
        "ENV": "dev"
    },
    "tasks": {
        "install": [
            "pip install -r requirements.txt",
            "pip install pytest pytest-cov black ruff"
        ],
        "test": "pytest --cov=src --cov-report=term-missing tests/",
        "lint": "ruff check .",
        "format": "black .",
        "format:check": "black --check .",
        "coverage": "pytest --cov=src --cov-report=html tests/"
    },
    "folders": {
        "source": "src",
        "tests": "tests"
    },
    "testFramework": {
        "name": "pytest",
        "config": "pytest.ini"
    }
}
